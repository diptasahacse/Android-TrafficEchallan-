<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    tools:context=".AdminChangePasswordActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayoutid"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminchangepassid"

            >


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       >

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Enter Admin Email"
           android:id="@+id/adminemailid"
           android:background="@drawable/adminbuttoncorner"
           android:padding="10dp"
           android:layout_marginBottom="5dp"


           />

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Enter New Password"
           android:id="@+id/adminnewpassid"
           android:background="@drawable/adminbuttoncorner"
           android:padding="10dp"


           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="change password"
           android:id="@+id/adminchangepassbuttonid"
           android:background="@drawable/announcementcorner"
           android:layout_marginTop="15dp"
           />


   </LinearLayout>




</LinearLayout>